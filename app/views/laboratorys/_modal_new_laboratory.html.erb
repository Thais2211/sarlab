<div class="modal fade" id="modalNewLaboratory" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog w-700">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" > Novo laboratório </h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <!--<form class="form-horizontal" id="form_disciplina"> -->
      <%= form_tag('/laboratorys/new_laboratory', method: :post, id: 'form-lab') do %>
        <div class="modal-body">
          <div class="form-group row">
            <div class="col-sm-12">
              <%= label_tag 'Name', 'Nome' %>
              <%= text_field_tag :name, nil, class: 'form-control form-control' %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-12">
              <%= label_tag 'Local', 'Local' %>
              <%= text_field_tag :local, nil, class: 'form-control form-control' %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-12">
              <%= label_tag 'Description', 'Descrição' %>
              <%= text_area_tag :description, nil, rows:3, class: 'form-control form-control' %>
            </div>
          </div>        
        </div>  
        <div class="modal-footer">            
          <%= submit_tag 'Salvar', :class => 'btn btn-primary'%>
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
        </div>
      <% end %>
    </div>
  </div>
</div> 