<p id="notice"><%= notice %></p>

<div class="card o-hidden border-0 shadow-lg my-3">
  <div class="card-body p-0">
    <div class="row">
      <div class="col-lg-12">
        <div class="p-3">
          <div class="text-left">
            <span class="h1 font-weight text-lg-gray-800 mb-4">Escolas</span>            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card o-hidden border-0 shadow-lg my-3">
  <div class="card-body p-0">
    <div class="row">
      <div class="col-lg-12">
        <div class="p-3">
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
              <%= button_to new_escola_path, { method: 'get', class: 'd-none d-sm-inline-block btn btn-sm btn-primary shadow-sm' } do %>
                  <i class="fas fa-plus-square" aria-hidden="true"> Nova escola</i>
              <% end %>
          </div>
          <table class="table table-striped table-bordered table-hover table-escolas">
            <thead>
              <tr>
                <th>Nome</th>
                <th>Endereço</th>
                <th>Número</th>
                <th>Bairro</th>
                <th>Cidade</th>
                <th>Responsável</th>
                <th>Telefone</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @escolas.each do |escola| %>
                <tr>
                  <td><%= escola.nome %></td>
                  <td><%= escola.endereco %></td>
                  <td><%= escola.numero %></td>
                  <td><%= escola.bairro %></td>
                  <td><%= escola.cidade %></td>
                  <td><%= escola.responsavel %></td>
                  <td><%= escola.telefone %></td>
                  <td><button class="btn btn-primary btn-sm" id="btnEditar">Editar</button></td>                  
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= render 'escolas/modal_new_escola' %>
  <%= render 'escolas/modal_edit_escola' %>
</div>
<br>

<script>
  $(document).ready(function() {
    
    $('.table-escolas').DataTable({
                pageLength: 10,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    {extend: 'excel', title: 'Empresas'},
                    {extend: 'pdf', title: 'Empresas'}
                ],
                "ordering": true,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/Portuguese-Brasil.json"
                }
            });
  });
</script>