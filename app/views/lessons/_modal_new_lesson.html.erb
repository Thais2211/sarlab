<div class="modal fade" id="modalNewLesson" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog w-700">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" > Nova aula </h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <%= form_tag('/lessons/new_lesson', method: :post) do %>
        <div class="modal-body">
          <div class="form-group row">
            <div class="col-sm-6" >
              <%= label_tag 'date_start', 'Data inicial' %>
              <%= date_field_tag :date_start, Time.now.beginning_of_month.strftime("%Y-%m-%d"), class: 'form-control form-control' %>
            </div>
            <div class="col-sm-6" >
              <%= label_tag 'date_end', 'Data final' %>
              <%= date_field_tag :date_end, Time.now.end_of_month.strftime("%Y-%m-%d"), class: 'form-control form-control' %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-6">
              <%= label_tag 'Disciplina', nil %>
              <%= select_tag 'disciplina_id', options_for_select(Disciplina.where(escola_id: current_user.escola_id).order(:nome).collect {|p| [p.nome, p.id]}), {:class => "custom-select-sm form-control", :data => {:placeholder => 'Selecione uma disciplina'}, :include_blank => true} %>
            </div>
            <div class="col-sm-6">
              <%= label_tag 'Laboratório', nil %>
              <%= select_tag 'laboratory_id', options_for_select(Laboratory.all.order(:name).collect {|p| [p.name, p.id]}), {:class => "custom-select-sm form-control", :data => {:placeholder => 'Selecione um professor'}, :include_blank => true} %>
            </div>
          </div>
          <h5> Cronograma: </h5>
          <div class="form-group row">
            <div class="col-sm-6">
              <%= select_tag 'day1', options_for_select([['Segunda','seg'],
                                                         ['Terça', 'ter'],
                                                         ['Quarta', 'qua'],
                                                         ['Quinta', 'qui'],
                                                         ['Sexta', 'sex'],
                                                         ['Sábado', 'sab'],
                                                        ], 'seg'), 
                                                          {:class => "custom-select-sm form-control", :data => {:placeholder => 'Selecione um dia'}, :include_blank => true} %>
            </div>
            <div class="col-sm-3">
              <%= time_field_tag :hour1_start, nil,  class: 'form-control form-control'%>
            </div>
            <div class="col-sm-3">
              <%= time_field_tag :hour1_end, nil,  class: 'form-control form-control'%>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-6">
              <%= select_tag 'day2', options_for_select([['Segunda','seg'],
                                                         ['Terça', 'ter'],
                                                         ['Quarta', 'qua'],
                                                         ['Quinta', 'qui'],
                                                         ['Sexta', 'sex'],
                                                         ['Sábado', 'sab'],
                                                        ]), 
                                                          {:class => "custom-select-sm form-control", :data => {:placeholder => 'Selecione um dia'}, :include_blank => true} %>
            </div>
            <div class="col-sm-3">
              <%= time_field_tag :hour2_start, nil,  class: 'form-control form-control'%>
            </div>
            <div class="col-sm-3">
              <%= time_field_tag :hour2_end, nil,  class: 'form-control form-control'%>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-6">
              <%= select_tag 'day3', options_for_select([['Segunda','seg'],
                                                         ['Terça', 'ter'],
                                                         ['Quarta', 'qua'],
                                                         ['Quinta', 'qui'],
                                                         ['Sexta', 'sex'],
                                                         ['Sábado', 'sab'],
                                                        ]), 
                                                          {:class => "custom-select-sm form-control", :data => {:placeholder => 'Selecione um dia'}, :include_blank => true} %>
            </div>
            <div class="col-sm-3">
              <%= time_field_tag :hour3_start, nil,  class: 'form-control form-control'%>
            </div>
            <div class="col-sm-3">
              <%= time_field_tag :hour3_end, nil,  class: 'form-control form-control'%>
            </div>
          </div>      
        </div>  
        <div class="modal-footer">            
          <%= submit_tag 'Salvar', :class => 'btn btn-primary'%>
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
        </div>
      <% end %>
    </div>
  </div>
</div> 