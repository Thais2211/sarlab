<div class="modal fade" id="modalAlterPassword" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog w-700"]>
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" > Alterar senha </h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <%= form_tag('/users/alter_password', method: :post) do %>
        <div class="modal-body">
          <div class="form-group row">
            <div class="col-sm-12">
              <%= label_tag 'Senha atual', nil %>
              <%= password_field_tag :password_atual, nil, class: 'form-control form-control' %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-6">
              <%= label_tag 'Nova senha', nil %>
              <%= password_field_tag :new_password, nil, class: 'form-control form-control' %>
            </div>

            <div class="col-sm-6">
              <%= label_tag 'Confirmar senha', nil %>
              <%= password_field_tag :confirm_password, nil, class: 'form-control form-control' %>
            </div>
          </div>
        </div>
        <div class="modal-footer">            
          <%= submit_tag 'Salvar', :class => 'btn btn-primary'%>
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
        </div>
      <% end %>
    </div>
  </div>
</div> 